{% if {{ sga_max_size }} <> 6  %}
alter system set sga_max_size ={{ sga_max_size }} {{ sga_unit }} scope=spfile sid='*';
{% endif %}
{% if {{ java_pool_size }} <> 100 %}
alter system set sga_target ={{ java_pool_size }} {{ java_pool_unit }} scope=spfile sid='*';
{% endif %}
{% if {{ db_cache_size }} <> 1  %}
alter system set sga_target ={{ db_cache_size }} {{ db_cache_unit }} scope=spfile sid='*';
{% endif %}
{% if {{ shared_pool_size }} <> 500  %}
alter system set sga_target ={{ shared_pool_size }} {{ shared_pool_unit }} scope=spfile sid='*';
{% endif %}
{% if {{ streams_pool_size }} <> 100  %}
alter system set sga_target ={{ streams_pool_size }} {{ streams_pool_unit }} scope=spfile sid='*';
{% endif %}